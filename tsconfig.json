{
  "compilerOptions": {
    "lib": ["es2015"],
    "module": "commonjs",
    "outDir": "lib",
    "declaration": true,
    "target": "es6",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "strict": true,
    "baseUrl": "src",
    "paths": {
      "*": ["node_modules/*", "src/types/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
